<%= turbo_stream.replace "quest_#{@quest.id}" do %>
  <div id="quest_<%= @quest.id %>"class="flex flex-row">
    <%= form_with model: @quest, url: toggle_complete_quest_path(@quest), method: :patch, data: { turbo_stream: true } do |f| %>
      <%= f.check_box :complete, checked: @quest.complete, onchange: "this.form.requestSubmit()" %>
      <span class="<%= @quest.complete ? 'line-through' : 'no-underline' %>">
        <%= @quest.title %>
      </span>
    <% end %>
    <%= button_to quest_path(@quest), method: :delete, data: { turbo_confirm: "Are you sure?" }, form: { "data-turbo-stream": true }, class: "text-red-500 hover:text-red-700" do %>
    🗑️
    <% end %>
  </div>
<% end %>
